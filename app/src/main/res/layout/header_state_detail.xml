<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@mipmap/pyq_bj"
        android:paddingTop="@dimen/toolbar_padding_top">

        <ImageView
            android:id="@id/iv_nav_back"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:onClick="doClick"
            android:padding="1dp"
            android:src="@mipmap/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_state_img"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clickable="true"
                android:onClick="doClick"
                android:src="@mipmap/my_tx_mr_1"
                app:riv_border_color="#FFFFFF"
                app:riv_border_width="2dp"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_space"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_state_name"
                    style="@style/Font14_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/item_state_gender"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@mipmap/my_gender_m" />

                    <TextView
                        android:id="@+id/item_state_age"
                        style="@style/Font13_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_space"
                        android:layout_marginRight="@dimen/margin_space"
                        android:text="0岁" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/header_state_title"
        style="@style/Font13_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:layout_marginTop="@dimen/margin_space"
        android:lineSpacingExtra="3dp"
        android:text="标题" />

    <com.ruanmeng.view.NineGridLayout
        android:id="@+id/header_state_nine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_space"
        android:layout_marginLeft="@dimen/margin_space"/>

    <ImageView
        android:id="@+id/header_state_oneimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:layout_marginTop="@dimen/margin_space"
        android:adjustViewBounds="true"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/header_state_videofl"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:layout_marginTop="@dimen/margin_space"
        android:visibility="gone">

        <ImageView
            android:id="@+id/header_state_videoimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/not_1" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@mipmap/radio_play" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_space"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/header_state_time"
            style="@style/Font13_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-08-31" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/header_state_praise"
            style="@style/Font13_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginRight="@dimen/margin_space"
            android:drawableLeft="@mipmap/dc_icon02"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="0" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_space"
        android:background="@color/background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/header_state_comment"
        style="@style/Font13_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/kc_pl"
        android:drawablePadding="5dp"
        android:padding="@dimen/margin_space"
        android:text="评论(0)" />

</LinearLayout>