<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <WebView
        android:id="@+id/header_teach_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:overScrollMode="never" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_space">

        <TextView
            android:id="@+id/header_teach_read"
            style="@style/Font14_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0人已阅读" />

        <CheckBox
            android:id="@+id/header_teach_collect"
            style="@style/Font13_black"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_space"
            android:background="@drawable/rec_ova_bg_white_stroke_divider"
            android:button="@null"
            android:drawableLeft="@drawable/cb_hospital_selector"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="收藏" />

        <CheckBox
            android:id="@+id/header_teach_zan"
            style="@style/Font13_white"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/cb_teach_detail_selector"
            android:button="@null"
            android:clickable="false"
            android:drawableLeft="@drawable/cb_teach_zan_selector"
            android:drawablePadding="@dimen/margin_space"
            android:paddingLeft="21dp"
            android:text="100"
            android:textColor="@color/cb_doctor_selector_color" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <TextView
        style="@style/Font13_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/kc_pl"
        android:drawablePadding="5dp"
        android:padding="@dimen/margin_space"
        android:text="评论" />

</LinearLayout>