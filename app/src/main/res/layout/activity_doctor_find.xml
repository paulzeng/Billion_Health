<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_search_hint" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/doctor_type_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_type_tv"
                style="@style/Font13_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="60dp"
                android:text="病症" />

            <ImageView
                android:id="@+id/doctor_type_iv"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/dc_tab" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="20dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/doctor_qu_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_qu_tv"
                style="@style/Font13_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="60dp"
                android:text="区域" />

            <ImageView
                android:id="@+id/doctor_qu_iv"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/dc_tab" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="20dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/doctor_xuan_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_xuan_tv"
                style="@style/Font13_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="60dp"
                android:text="筛选" />

            <ImageView
                android:id="@+id/doctor_xuan_iv"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/dc_tab" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="20dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/doctor_rank_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_rank_tv"
                style="@style/Font13_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="60dp"
                android:text="排序" />

            <ImageView
                android:id="@+id/doctor_rank_iv"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/dc_tab" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/doctor_find_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/doctor_find_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/doctor_find_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

            <include layout="@layout/layout_empty" />

        </FrameLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>