<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/info_img_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_space"
        android:paddingLeft="@dimen/margin_space"
        android:paddingRight="@dimen/margin_space"
        android:paddingTop="@dimen/margin_space">

        <TextView
            style="@style/Font14_gray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头像" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/info_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/my_tx_mr"
            app:riv_oval="true" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/arrow_right"
            android:visibility="invisible" />

    </LinearLayout>

    <com.allen.library.SuperTextView
        android:id="@+id/info_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:sBottomLineMargin="@dimen/margin_space"
        app:sLeftTextColor="@color/gray"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="用户名"
        app:sLineShow="both"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconRes="@mipmap/arrow_right"
        app:sRightIconSize="13dp"
        app:sRightTextColor="@color/black"
        app:sRightTextMarginRight="30dp"
        app:sTopLineMargin="@dimen/margin_space" />

    <com.allen.library.SuperTextView
        android:id="@+id/info_gender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:sBottomLineMargin="@dimen/margin_space"
        app:sLeftTextColor="@color/gray"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="性别"
        app:sLineShow="bottom"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconRes="@mipmap/arrow_right"
        app:sRightIconSize="13dp"
        app:sRightTextColor="@color/black"
        app:sRightTextMarginRight="30dp" />

    <com.allen.library.SuperTextView
        android:id="@+id/info_age"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:sBottomLineMargin="@dimen/margin_space"
        app:sLeftTextColor="@color/gray"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="年龄"
        app:sLineShow="bottom"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconRes="@mipmap/arrow_right"
        app:sRightIconSize="13dp"
        app:sRightTextColor="@color/black"
        app:sRightTextMarginRight="30dp" />

    <com.allen.library.SuperTextView
        android:id="@+id/info_tel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:sBottomLineMargin="@dimen/margin_space"
        app:sLeftTextColor="@color/gray"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="联系方式"
        app:sLineShow="bottom"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconSize="13dp"
        app:sRightTextColor="@color/black"
        app:sRightTextMarginRight="30dp"
        app:sRightTextString="***********" />

    <com.allen.library.SuperTextView
        android:id="@+id/info_sign"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:sBottomLineMargin="@dimen/margin_space"
        app:sLeftTextColor="@color/gray"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="个性签名"
        app:sLineShow="bottom"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconRes="@mipmap/arrow_right"
        app:sRightIconSize="13dp"
        app:sRightTextColor="@color/light"
        app:sRightTextMarginRight="30dp" />

    <com.allen.library.SuperTextView
        android:id="@+id/info_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:sBottomLineMargin="0dp"
        app:sLeftTextColor="@color/gray"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="密码"
        app:sLineShow="bottom"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconRes="@mipmap/arrow_right"
        app:sRightIconSize="13dp"
        app:sRightTextColor="@color/light"
        app:sRightTextMarginRight="30dp" />

</LinearLayout>